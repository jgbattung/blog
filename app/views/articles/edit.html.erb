<%= form_with scope: :article, url: article_create_path, local: true do |f| %>

<p>
    <% if @article.errors.any? %>
        <ul>
            <% @articles.errors.full_messages.each do |message| %>
                <li><%= message %>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :body %><br>
    <%= f.text_field :body %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>