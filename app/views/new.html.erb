<%= form_with url: create_article_path, local: true do |f| %>

<p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :body %><br/>
    <%= f.text_field :body %>
</p>

<p>
    <%= f.submit %>
</p>

<div data-controller="article-form">
    <%= render "form" %>

</div>

<% end %>